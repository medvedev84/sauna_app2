<%= render 'shared/error_messages', :object => f.object %>
<dl>
	<dt><label for="coupon_deal_coupon_url_id"><%= t :coupon_url %>:</dt>
	<dd>
		<%= select("coupon_deal", "coupon_url_id", options_for_select(@coupon_urls_for_dropdown, @coupon_deal.coupon_url_id), { :include_blank => false }) %>						
	</dd>
	<dt><label for="coupon_deal_description"><%= t :description %>:</dt>
	<dd>
		<%= f.text_field :description %>
	</dd>		
	<dt><label for="coupon_deal_deal_url"><%= t :coupon_deal_deal_url %>:</dt>
	<dd>
		<%= f.text_field :deal_url, :size => 50, :style => 'width:400px;' %>
	</dd>	
	<dt><label for="coupon_deal_image_url"><%= t :coupon_deal_image_url %>:</dt>
	<dd>
		<%= f.text_field :image_url, :size => 50, :style => 'width:400px;' %>
	</dd>		
	<dt><label for="coupon_deal_price_old"><%= t :coupon_deal_price_old %>:</dt>
	<dd>
		<%= f.text_field :price_old %>
	</dd>	
	<dt><label for="coupon_deal_price_new"><%= t :coupon_deal_price_new %>:</dt>
	<dd>
		<%= f.text_field :price_new %>
	</dd>	
	<dt></dt>
	<dd>
		<%= f.submit t :save %>
	</dd>
</dl>